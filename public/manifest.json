{
  "name": "GroupBook",
  "description": "Turn tab groups to bookmarks",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["tabs", "bookmarks", "tabGroups"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Group Book"
  },

  "icons": {
    "16": "book-16-16.png",
    "48": "book-16-48.png",
    "128": "book-16-128.png"
  }
}
